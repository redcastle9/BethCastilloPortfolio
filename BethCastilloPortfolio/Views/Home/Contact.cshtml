@model BethCastilloPortfolio.Models.ContactModel

<!-- Contact -->
<div class="wrapper style4">
    <article id="contact" class="container 75%">
        <header>
            <h2>Have me make stuff for you.</h2>
            <p>If you want to learn more, or think you might have 
            something I can help you with fill out this contact form 
            and I will get back to you as soon as possible.</p>
        </header>
        <div>
            <div class="row">
                <div class="12u">
                    @using (Html.BeginForm("Index/", "Home", FormMethod.Post))
                    {

                        <div>
                            <div class="row">
                                @Html.ValidationSummary(true)
                                <div class="6u 12u(mobile)">
                                    @*<input type="text" name="name" id="name" placeholder="Name" />*@
                                    @Html.TextBoxFor(model=>model.Name, new { placeholder = "Name" })
                                    @Html.ValidationMessageFor(model=>model.Name, "", new { @style = "color: red;" })
                                </div>
                                <div class="6u 12u(mobile)">
                                    @*<input type="text" name="email" id="email" placeholder="Email" />*@
                                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Email" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                            <div class="row">
                                <div class="12u">
                                    @*<input type="text" name="subject" id="subject" placeholder="Subject" />*@
                                    @Html.TextBoxFor(model => model.Subject, new { placeholder = "Subject" })
                                    @Html.ValidationMessageFor(model => model.Subject)
                                </div>
                            </div>
                            <div class="row">
                                <div class="12u">
                                    @*<textarea name="message" id="message" placeholder="Message"></textarea>*@
                                    @Html.TextAreaFor(model => model.Message, new { placeholder="Message"})
                                    @Html.ValidationMessageFor(model => model.Message)
                                </div>
                            </div>
                            <div class="row 200%">
                                <div class="12u">
                                    <ul class="actions">
                                        <li><input type="submit" value="Send Message" /></li>
                                        <li><input type="reset" value="Clear Form" class="alt" /></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="row">
                <div class="12u">
                    <hr />
                    <h3>Find me on ...</h3>
                    <ul class="social">
                        <li><a href="https://twitter.com/Redcastle9" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
